# Go Strategy Analysis Tool - Configuration
# Please update the paths below to match your local KataGo installation.

katago:
  # Path to KataGo executable
  # WSL example: /mnt/c/katago/katago.exe
  # Linux example: /usr/bin/katago
  katago_path: "/mnt/c/katago/katago.exe"
  
  # Path to KataGo neural network model
  # Use a lightweight model for CPU (e.g., b10c128 or b15c192)
  model_path: "/mnt/c/katago/model.bin.gz"
  
  # Path to KataGo config file
  config_path: "/mnt/c/katago/analysis.cfg"

analysis:
  # Default komi value
  default_komi: 7.5
  
  # Number of visits for 19x19 board (lower for CPU performance)
  visits_19x19: 150
  
  # Number of visits for 9x9 and 13x13 boards
  visits_small: 500
  
  # Number of top candidate moves to return
  top_moves_count: 3

database:
  # Path to SQLite database file (relative to project root)
  path: "data/analysis.db"
